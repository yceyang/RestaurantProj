<h1>美食達人</h1>

<% @users.each do |user| %>
  <div class="my-followship col-sm-3">
    <%= link_to user_path(user), class:"text-center" do %>
      <%= image_tag("blank-profile.png", alt: "following user", class: "img-responsive center-block") %>
      <p><%= user.name %></p>
    <% end %>
    <%= render partial: "shared/followship", locals: {object: user} %>
  </div>
<% end %>