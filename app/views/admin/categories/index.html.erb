<h2>餐廳分類管理</h2>

<div class=" row col-lg-12">
  <%= link_to 'Restaurant', admin_restaurants_path %> |
  <%= link_to 'Categories', admin_categories_path %>
</div>

<div class="form-inline" >
  <%= form_for [:admin, @category] do |f| %>
    <div class="form-group">
      <%= f.text_field :name, placeholder: "Category Name",  class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>

  <% if @category.errors.any? %>
    <p>(Tips: <%= @category.errors.full_messages.to_sentence %>)</p>
  <% end %>
</div>

<table class="table table-hover">
  <thead>
    <th>#</th>
    <th>分類</th>
    <th>功能</th>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %>
        <td><%= link_to 'Edit', admin_categories_path(id: category.id) %> | <!-- categories?id=1 -->
        <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>