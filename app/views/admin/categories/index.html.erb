<h2>餐廳分類管理</h2>

<div class=" row col-lg-12">
  <%= link_to 'Restaurant', admin_restaurants_path %> |
  <%= link_to 'Categories', admin_categories_path %>
</div>

<table class="table table-hover">
  <thead>
    <th>#</th>
    <th>分類</th>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>