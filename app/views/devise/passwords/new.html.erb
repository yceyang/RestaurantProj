
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-group col-lg-6 col-lg-offset-3 row" }) do |f| %>

  <%= devise_error_messages! %>

  <h2>Forgot your password?</h2>

  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, :class => "form-control col-lg-12" %>

  <button type="submit" class="btn btn-primary col-lg-12">Send me reset password instructions</button>
<% end %>

<%= render "devise/shared/links" %>
