
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-group col-lg-6 col-lg-offset-3 row"}) do |f| %>

  <h2>Sign in to Smaskig</h2>

  <%= f.label :email %>
  <%= f.email_field :email, autofocus: true, :class => "form-control" %>

  <%= f.label :password %>
  <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>

  <% if devise_mapping.rememberable? %>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  <% end %>

  <button type="submit" class="btn btn-primary col-lg-12">Login</button>
  <%= render "devise/shared/links" %>
<% end %>
